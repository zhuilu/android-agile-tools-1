<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MainLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <Button
        android:id="@+id/buttonPlanningPoker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="@string/button_planningPoker"
        android:onClick="openPlanningPoker"/>

    <Button
        android:id="@+id/buttonTimeboxStopWatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonPlanningPoker"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:text="@string/button_timeBoxStopWatch"
        android:onClick="openTimeboxStopWatch"/>

</RelativeLayout>